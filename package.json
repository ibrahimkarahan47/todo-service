{
  "name": "modanisa-todo-service",
  "version": "0.0.1",
  "main": "index.js",
  "engines": {
    "node": "14.15.3",
    "npm": "6.14.8"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "jest -c jest.config.js --runInBand --detectOpenHandles --forceExit",
    "lint": "eslint --ignore-pattern 'node_modules/**' 'src/**/*.{js,jsx,ts,tsx}' '__tests__/**/*.{js,jsx,ts,tsx}'",
    "lint-fix": "npm run lint -- --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint-fix",
      "git add"
    ]
  },
  "dependencies": {
    "express": "^4.17.1",
    "joi": "^14.3.1",
    "joi-date-extensions": "^1.2.0",
    "supertest": "^6.1.3"
  },
  "devDependencies": {
    "eslint": "~6.3.0",
    "eslint-config-airbnb-base": "~14.0.0",
    "eslint-plugin-import": "~2.18.2",
    "husky": "~3.0.5",
    "jest": "~24.9.0",
    "lint-staged": "~9.2.5"
  }
}
